# Frontend Environment Variables Template
# Copy this file to .env in the froentend directory and fill in your values

# Backend API Base URL (without /api suffix)
# For local development: http://localhost:5000
# For production: https://your-backend-url.onrender.com
VITE_API_BASE_URL=http://localhost:5000

# AI Chatbot Configuration (Optional)
# Google Gemini API Key (currently used)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (optional, for OpenAI provider)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional, for Claude provider)
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here

